generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MARKETSTATUS {
  OPEN
  CLOSED
}

enum TRADETYPE {
  YES
  NO
}

model User {
  id       String  @unique @default(uuid())
  clerkId  String  @unique
  name     String
  username String? @unique
  email    String
  balance  Int
  trades   Trade[]
}

model Market {
  id          String       @unique @default(uuid())
  Question    String
  description String
  yesCount    BigInt
  noCount     BigInt
  category    String
  status      MARKETSTATUS @default(OPEN)
  endsAt      DateTime
  startedon   DateTime     @default(now())
  predections Trade[]
}

model Trade {
  id           String    @unique @default(uuid())
  UserID       String
  user         User      @relation(fields: [UserID], references: [id])
  TradeType    TRADETYPE
  tradeAmount  Int
  time         DateTime
  predictionId String    @default(cuid())
  prediction   Market    @relation(fields: [predictionId], references: [id])
}
